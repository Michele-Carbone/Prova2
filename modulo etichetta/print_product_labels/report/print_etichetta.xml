        <template id="report_productlabel_custom">
            <t t-call="web.basic_layout">
                <!-- DA VERIFICARE Impostando una variabile come in questo caso product e anche il value possiamo utilizzare questa variabile per importare tutti i dati di cui abbiamo bisogno dal DB senza utilizzare il docs -->

                <t t-foreach="docs" t-as="product">
                    <div class="page">
                        <t t-call="print_product_labels.print_label_product_id_report">
                            <t t-set="product" t-value="product"/>
                        </t>
                    </div>
                </t>
            </t>
        </template>
