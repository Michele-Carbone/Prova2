<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="print_product_labels.list">
      <field name="name">print_product_labels list</field>
      <field name="model">print_product_labels.print_product_labels</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="prodotto"/>
        </tree>
      </field>
    </record>

    <record id="print_product_labels.form" model="ir.ui.view">
      <field name="name">print_product_labels form</field>
      <field name="model">print_product_labels.print_product_labels</field>
      <field name="arch" type="xml">
        <form>
          <!-- <header>
            <button name="action_sold" type="object" string="Sold" states="new,offer_received"/>
          </header> -->
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
              <field name="name" options="{'color_field': 'color'}"/>
            </div>
            <notebook>
              <page string="Description">
                <group>
                  <group>
                    <field name="description"/>
                    <field name="cliente"/>
                    <field name="value"/>
                    <field name="value2"/>
                    <field name="prodotto"/>
                    <!-- <field name="pricelist_id"/>
                    <field name="price"/> -->
                  </group>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

        <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="print_product_labels.action_window">
      <field name="name">print_product_labels window</field>
      <field name="res_model">print_product_labels.print_product_labels</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
