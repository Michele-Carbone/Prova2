    <!-- Top menu item -->

    <menuitem name="print_product_labels" id="print_product_labels.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="print_product_labels.menu_1" parent="print_product_labels.menu_root"/>
    <!-- <menuitem name="Menu 2" id="print_product_labels.menu_2" parent="print_product_labels.menu_root"/> -->

    <!-- actions -->

    <menuitem name="List" id="print_product_labels.menu_1_list" parent="print_product_labels.menu_1" action="print_product_labels.action_window"/>
